<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login & Register</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    /* Center the card and adjust the width */
    .auth-card {
      max-width: 400px;
      margin: 0 auto;
      padding: 15px;
      border-radius: 20px;
    }

    /* Customize unselected tab color */
    .nav-tabs .nav-link {
      color: gray;
    }

    .nav-tabs .nav-link.active {
      color: black;
      font-family: cursive;
    }

    .Welcome {
      font-family: cursive;
      font-weight: bolder;
    }

    .login:hover {
      background-color: #000dfdcb;
    }

    .Register:hover {
      background-color: rgb(4, 188, 4);
    }

    /* Show/Hide password button */
    .password-toggle {
      position: absolute;
      right: 15px;
      top: 38px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .password-input {
      transition: all 0.3s ease;
    }

    .password-input[type="password"] {
      letter-spacing: 0.15em;
    }

    .password-toggle:hover {
      transform: scale(1.2);
      color: #0d6efd;
    }
  </style>
</head>

<body>
  <div class="container mt-5">
    <div class="card shadow auth-card">
      <div class="card-header text-center">
        <h2 class="Welcome">Welcome</h2>
        <p class="text-muted">Please login or register</p>
      </div>
      <div class="card-body">
        <ul class="nav nav-tabs" id="authTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button"
              role="tab" aria-controls="login" aria-selected="true">
              <i class="fa-solid fa-right-to-bracket"></i> Login
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button"
              role="tab" aria-controls="register" aria-selected="false">
              <i class="fa-regular fa-id-card"></i> Register
            </button>
          </li>
        </ul>

        <div class="tab-content mt-4" id="authTabsContent">
          <!-- Login Form -->
          <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
            <form action="/login" method="post">
              <div class="mb-3">
                <label for="loginUsername" class="form-label">Username</label>
                <input name="username" placeholder="enter your username" type="text" class="form-control"
                  id="loginUsername" required>
              </div>
              <div class="mb-3 position-relative">
                <label for="loginPassword" class="form-label">Password</label>
                <input name="password" placeholder="enter your password" type="password"
                  class="form-control password-input" id="loginPassword" required>
                <i class="fa-solid fa-eye password-toggle" id="toggleLoginPassword"></i>
              </div>
              <button type="submit" class="btn btn-primary w-100 login">
                <i class="fa-solid fa-arrow-right"></i> Login
              </button>
            </form>
          </div>

          <!-- Register Form -->
          <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
            <form action="/register" method="post">
              <div class="mb-3">
                <label for="registerUsername" class="form-label">Username</label>
                <input name="username" placeholder="enter your new username" type="text" class="form-control"
                  id="registerUsername" required>
              </div>
              <div class="mb-3 position-relative">
                <label for="registerPassword" class="form-label">Password</label>
                <input name="password" placeholder="enter your new password" type="password"
                  class="form-control password-input" id="registerPassword" required>
                <i class="fa-solid fa-eye password-toggle" id="toggleRegisterPassword"></i>
              </div>
              <button type="submit" class="btn btn-success w-100 Register">
                <i class="fa-solid fa-arrow-right"></i> Register
              </button>
            </form>
          </div>
        </div>
      </div>
      <div class="card-footer text-center text-muted">
        &copy; 2024 EduStream
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

  <script>
    // Show/Hide password functionality for login and register
    const toggleLoginPassword = document.getElementById('toggleLoginPassword');
    const loginPasswordField = document.getElementById('loginPassword');

    const toggleRegisterPassword = document.getElementById('toggleRegisterPassword');
    const registerPasswordField = document.getElementById('registerPassword');

    // Login password toggle
    toggleLoginPassword.addEventListener('click', () => {
      // Toggle password visibility
      const type = loginPasswordField.type === 'password' ? 'text' : 'password';
      loginPasswordField.type = type;

      // Toggle the eye icon (fa-eye vs fa-eye-slash)
      if (loginPasswordField.type === 'password') {
        toggleLoginPassword.classList.remove('fa-eye-slash');
        toggleLoginPassword.classList.add('fa-eye');
      } else {
        toggleLoginPassword.classList.remove('fa-eye');
        toggleLoginPassword.classList.add('fa-eye-slash');
      }
    });

    // Register password toggle
    toggleRegisterPassword.addEventListener('click', () => {
      // Toggle password visibility
      const type = registerPasswordField.type === 'password' ? 'text' : 'password';
      registerPasswordField.type = type;

      // Toggle the eye icon (fa-eye vs fa-eye-slash)
      if (registerPasswordField.type === 'password') {
        toggleRegisterPassword.classList.remove('fa-eye-slash');
        toggleRegisterPassword.classList.add('fa-eye');
      } else {
        toggleRegisterPassword.classList.remove('fa-eye');
        toggleRegisterPassword.classList.add('fa-eye-slash');
      }
    });
  </script>
</body>

</html>